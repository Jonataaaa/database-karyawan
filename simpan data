import mysql.connector

db = mysql.connector.connect(
    host='localhost',
    user='root',
    password='',
    database='dbkaryawan'
)

cursor = db.cursor()

sql = """
INSERT INTO pegawai (nip, nama, jabatan, divisi, gaji)
VALUES (%s, %s, %s,%s,%s)
"""

while True:
    nip = input("Masukkan nip : ")
    nama = input("masukkan nama : ")
    jabatan = input("masukkan jabatan : ")
    divisi = input("masukkan divisi : ")
    gaji = input("masukkan gaji : ")

    cursor.execute(sql, (nip, nama, jabatan, divisi, gaji))
    db.commit()

    lanjut = input("Tambah data (y/n): ")
    if lanjut.lower() != 'y':
        break

print("Selesai")

cursor.close()
db.close()
